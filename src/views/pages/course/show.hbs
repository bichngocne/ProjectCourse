{{#if course}}
<div class="wrapper">
    <div class="banner-page"
        style="background-image:linear-gradient(90deg, #CD1F28 15%, #CD1F28b8 40%, rgba(0,212,255,0) 80%),url(/static/uploads/{{index course.images 0   }});">
        <div class="w-layout py-5 text-white py-3">
            <div class="title"><h3>{{course.name}}</h3></div>
            <div class="description">{{course.description}}</div>
            <div class="btn btn-danger mt-3">Thêm mô tả</div>
        </div>
    </div>
    <div class="content-1">

    </div>
</div>
{{else}}
{{> error}}
{{/if}}